<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cricket"

    tools:context=".MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Cricket Score Board"
        android:textColor="@android:color/white"
        android:padding="4dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/heading"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/trophy1">

    </ImageView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="340dp"
        android:src="@drawable/trophy">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM A"
                android:textColor="@android:color/white"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/team_a">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0"
                android:id="@+id/score_board_team_A"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="80sp">

            </TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamA1"
                android:text="SIXER (+6)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamA2"
                android:text="FOUR (+4)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamA3"
                android:text="THREE (+3)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamA4"
                android:text="TWO (+2)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamA5"
                android:text="SINGLE (+1)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>


        </LinearLayout>


        <View
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray">
        </View>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM B"
                android:textColor="@android:color/white"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/team_b">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0"
                android:id="@+id/score_board_team_B"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="80sp">

            </TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamB1"
                android:text="SIXER (+6)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamB2"
                android:text="FOUR (+4)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamB3"
                android:text="THREE (+3)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamB4"
                android:text="TWO (+2)"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTeamB5"
                android:text="SINGLE (+1)"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary">
            </Button>



        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:fontFamily="cursive"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:onClick="resetScore"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
    </Button>


</RelativeLayout>